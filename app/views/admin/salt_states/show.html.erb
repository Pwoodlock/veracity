<% content_for :title, "#{@salt_state.display_name} - Salt Editor" %>

<%= render layout: 'shared/sidebar' do %>
  <div class="p-4 lg:p-6">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-6">
      <div>
        <div class="flex items-center gap-2 text-sm text-base-content/60 mb-1">
          <%= link_to "Salt Editor", admin_salt_states_path, class: "hover:text-primary" %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span><%= @salt_state.state_type.titleize %></span>
        </div>
        <h1 class="text-2xl font-bold text-base-content flex items-center gap-2">
          <%= @salt_state.display_name %>
          <span class="badge <%= @salt_state.type_badge_class %>"><%= @salt_state.state_type.titleize %></span>
          <% if @salt_state.is_template? %>
            <span class="badge badge-outline">Template</span>
          <% end %>
        </h1>
        <% if @salt_state.description.present? %>
          <p class="text-base-content/60 mt-1"><%= @salt_state.description %></p>
        <% end %>
      </div>
      <div class="flex gap-2 mt-4 lg:mt-0">
        <%= link_to edit_admin_salt_state_path(@salt_state), class: "btn btn-sm btn-ghost gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
        <%= button_to clone_admin_salt_state_path(@salt_state), method: :post, class: "btn btn-sm btn-ghost gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          Clone
        <% end %>
        <% if @salt_state.is_active? %>
          <%= button_to undeploy_admin_salt_state_path(@salt_state), method: :post, class: "btn btn-sm btn-warning gap-2", data: { confirm: "Remove from Salt master?" } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
            </svg>
            Undeploy
          <% end %>
        <% else %>
          <%= button_to deploy_admin_salt_state_path(@salt_state), method: :post, class: "btn btn-sm btn-success gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
            </svg>
            Deploy
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content - Code View -->
      <div class="lg:col-span-2">
        <div class="card bg-base-100 shadow-sm">
          <div class="card-body p-0">
            <!-- Code Header -->
            <div class="flex items-center justify-between px-4 py-2 bg-base-200 rounded-t-xl">
              <div class="flex items-center gap-2">
                <div class="flex gap-1.5">
                  <div class="w-3 h-3 rounded-full bg-error"></div>
                  <div class="w-3 h-3 rounded-full bg-warning"></div>
                  <div class="w-3 h-3 rounded-full bg-success"></div>
                </div>
                <span class="font-mono text-sm text-base-content/60"><%= @salt_state.file_path %></span>
              </div>
              <div class="flex items-center gap-2">
                <% if @yaml_error %>
                  <span class="badge badge-error badge-sm gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    YAML Error
                  </span>
                <% elsif @salt_state.jinja2_template? %>
                  <span class="badge badge-info badge-sm gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Jinja2 Template
                  </span>
                <% else %>
                  <span class="badge badge-success badge-sm gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Valid YAML
                  </span>
                <% end %>
              </div>
            </div>

            <!-- Code Content -->
            <pre class="p-4 overflow-x-auto text-sm font-mono bg-[#1a1b26] text-[#a9b1d6] rounded-b-xl"><code><%= @salt_state.content %></code></pre>
          </div>
        </div>

        <!-- YAML Error Details -->
        <% if @yaml_error %>
          <div class="alert alert-error mt-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold">YAML Syntax Error</h3>
              <p class="text-sm">Line <%= @yaml_error[:line] %>: <%= @yaml_error[:message] %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-4">
        <!-- Status Card -->
        <div class="card bg-base-100 shadow-sm">
          <div class="card-body p-4">
            <h3 class="font-semibold text-base-content mb-3">Status</h3>

            <div class="space-y-3">
              <!-- Deployment Status -->
              <div class="flex items-center justify-between">
                <span class="text-sm text-base-content/60">Deployment</span>
                <% if @salt_state.is_active? %>
                  <span class="badge badge-success gap-1">
                    <span class="w-1.5 h-1.5 bg-success rounded-full animate-pulse"></span>
                    Active
                  </span>
                <% else %>
                  <span class="badge badge-ghost">Not Deployed</span>
                <% end %>
              </div>

              <!-- Last Deployed -->
              <% if @salt_state.last_deployed_at %>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Last Deployed</span>
                  <span class="text-sm" title="<%= @salt_state.last_deployed_at %>">
                    <%= time_ago_in_words(@salt_state.last_deployed_at) %> ago
                  </span>
                </div>
              <% end %>

              <!-- Category -->
              <% if @salt_state.category.present? %>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Category</span>
                  <span class="badge badge-sm badge-ghost"><%= @salt_state.category.titleize %></span>
                </div>
              <% end %>

              <!-- Created -->
              <div class="flex items-center justify-between">
                <span class="text-sm text-base-content/60">Created</span>
                <span class="text-sm" title="<%= @salt_state.created_at %>">
                  <%= time_ago_in_words(@salt_state.created_at) %> ago
                </span>
              </div>

              <!-- Created By -->
              <% if @salt_state.created_by %>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Created By</span>
                  <span class="text-sm"><%= @salt_state.created_by.email %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- File Path Card -->
        <div class="card bg-base-100 shadow-sm">
          <div class="card-body p-4">
            <h3 class="font-semibold text-base-content mb-3">File Location</h3>
            <code class="text-xs bg-base-200 p-2 rounded block break-all"><%= @salt_state.file_path %></code>
          </div>
        </div>

        <!-- Test State Card -->
        <% unless @salt_state.cloud_profile? || @salt_state.cloud_provider? || @salt_state.cloud_map? %>
          <div class="card bg-base-100 shadow-sm">
            <div class="card-body p-4">
              <h3 class="font-semibold text-base-content mb-3">Test State</h3>
              <p class="text-xs text-base-content/60 mb-3">
                Run a test (dry-run) of this state on target minions.
              </p>
              <%= form_with url: test_admin_salt_state_path(@salt_state), method: :post, local: true, class: "space-y-2" do |f| %>
                <input type="text" name="target" value="*" placeholder="Target (e.g., '*', 'web*')" class="input input-bordered input-sm w-full" />
                <button type="submit" class="btn btn-sm btn-outline w-full gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Run Test
                </button>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Danger Zone -->
        <div class="card bg-base-100 shadow-sm border border-error/30">
          <div class="card-body p-4">
            <h3 class="font-semibold text-error mb-3">Danger Zone</h3>
            <%= button_to admin_salt_state_path(@salt_state), method: :delete, class: "btn btn-sm btn-error btn-outline w-full gap-2", data: { confirm: "Are you sure you want to delete this state? This cannot be undone." } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete State
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
