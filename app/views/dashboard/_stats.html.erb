<div id="dashboard-stats" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Servers -->
  <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-200">
    <div class="card-body p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 rounded-xl bg-primary/10 text-primary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
          </svg>
        </div>
        <div class="flex flex-col items-end">
          <span class="text-xs font-medium text-base-content/60 uppercase tracking-wider">Total Servers</span>
          <h2 class="text-3xl font-bold text-base-content mt-1"><%= total_servers %></h2>
        </div>
      </div>
      
      <div class="flex items-center justify-between text-sm pt-4 border-t border-base-content/5">
        <div class="flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-success"></span>
          <span class="text-base-content/70"><%= online_servers %> online</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-error"></span>
          <span class="text-base-content/70"><%= offline_servers %> offline</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Commands (24h) -->
  <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-200">
    <div class="card-body p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 rounded-xl bg-secondary/10 text-secondary">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="flex flex-col items-end">
          <span class="text-xs font-medium text-base-content/60 uppercase tracking-wider">Commands (24h)</span>
          <h2 class="text-3xl font-bold text-base-content mt-1"><%= commands_today %></h2>
        </div>
      </div>
      
      <div class="flex items-center text-sm pt-4 border-t border-base-content/5">
        <span class="text-success font-medium flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <%= successful_commands %> successful
        </span>
      </div>
    </div>
  </div>

  <!-- Failed Commands -->
  <% failed_color = failed_commands > 0 ? 'error' : 'success' %>
  <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-200">
    <div class="card-body p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 rounded-xl bg-<%= failed_color %>/10 text-<%= failed_color %>">
          <% if failed_commands > 0 %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          <% else %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          <% end %>
        </div>
        <div class="flex flex-col items-end">
          <span class="text-xs font-medium text-base-content/60 uppercase tracking-wider">Failed Commands</span>
          <h2 class="text-3xl font-bold text-<%= failed_color %> mt-1"><%= failed_commands %></h2>
        </div>
      </div>
      
      <div class="flex items-center text-sm pt-4 border-t border-base-content/5">
        <span class="text-base-content/60">Last 24 hours</span>
      </div>
    </div>
  </div>

  <!-- Success Rate -->
  <% success_rate = commands_today > 0 ? ((successful_commands.to_f / commands_today * 100).round(1)) : 100 %>
  <% rate_color = success_rate >= 95 ? 'success' : success_rate >= 80 ? 'warning' : 'error' %>
  <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 border border-base-200">
    <div class="card-body p-6">
      <div class="flex items-center justify-between mb-4">
        <div class="p-3 rounded-xl bg-<%= rate_color %>/10 text-<%= rate_color %>">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <div class="flex flex-col items-end">
          <span class="text-xs font-medium text-base-content/60 uppercase tracking-wider">Success Rate</span>
          <h2 class="text-3xl font-bold text-<%= rate_color %> mt-1"><%= success_rate %>%</h2>
        </div>
      </div>
      
      <div class="flex items-center text-sm pt-4 border-t border-base-content/5">
        <div class="w-full bg-base-200 rounded-full h-1.5">
          <div class="bg-<%= rate_color %> h-1.5 rounded-full" style="width: <%= success_rate %>%"></div>
        </div>
      </div>
    </div>
  </div>
</div>
